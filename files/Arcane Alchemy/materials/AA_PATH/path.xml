<Entity name="$projectile_default">

<GameEffectComponent 
    effect="CUSTOM"
    custom_effect_id="PATH"
    frames="120">
</GameEffectComponent> 

	<GameAreaEffectComponent
		radius="50"
		frame_length="90"
		>
	</GameAreaEffectComponent>

	

  	<ParticleEmitterComponent 
		emitted_material_name="spark_yellow"
		gravity.y="0.0"
		lifetime_min="5"
		lifetime_max="7"
		count_min="1"
		count_max="1"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		area_circle_radius.min="120"
		area_circle_radius.max="120"
		cosmetic_force_create="0"
		airflow_force="0.3"
		airflow_time="0.01"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<Base file="mods/Hydroxide/files/lib/base_field.xml">
		<LifetimeComponent
			lifetime="30"
			>
		</LifetimeComponent>
		
		<SpriteComponent 
			image_file=""
			>
		</SpriteComponent>

		

		
	</Base>
	
	
	
	<MagicConvertMaterialComponent
      kill_when_finished="0"
      from_material_tag="[liquid]"
      steps_per_frame="5"
      to_material="rice"
      is_circle="1"
      radius="120" >
    </MagicConvertMaterialComponent>
	
	<MagicConvertMaterialComponent
      kill_when_finished="0"
      from_material_tag="[gas]"
      steps_per_frame="5"
      to_material="rice"
      is_circle="1"
      radius="120" >
    </MagicConvertMaterialComponent>
	
	<MagicConvertMaterialComponent
      kill_when_finished="0"
      from_material_tag="[box2d]"
      steps_per_frame="5"
      to_material="rice"
      is_circle="1"
      radius="120" >
    </MagicConvertMaterialComponent>
	
	<MagicConvertMaterialComponent
      kill_when_finished="0"
      from_material="fire"
      steps_per_frame="5"
      to_material="rice"
      is_circle="1"
      radius="120" >
    </MagicConvertMaterialComponent>
	
	

  

	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/freeze_circle.xml"
		>
	</VariableStorageComponent>
</Entity>

